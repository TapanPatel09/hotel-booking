<% layout("/layouts/boylerplate.ejs") %>

<div class="container mt-5">

  <!-- Title -->
  <h2 class="text-center fw-bold mb-4" style="font-size: 2.8rem;">
    <%= list.title %>
  </h2>

  <!-- Listing Card -->
  <div class="card shadow-sm mx-auto" style="max-width: 800px; border-radius: 20px;">
    
    <!-- Image -->
    <img 
      src="<%= list.image %>" 
      alt="Listing Image" 
      class="card-img-top" 
      style="height: 350px; object-fit: cover; border-radius: 20px 20px 0 0;" 
    />

    <!-- Card Body -->
    <div class="card-body">
      
      <!-- Description -->
      <b>Created by →</b> <i><%= list.owner.username %></i>
      <br>
      <p class="card-text mb-3"><%= list.description %></p>

      <!-- Price -->
      <p class="card-text fw-bold text-dark fs-5">
        ₹<%= list.price.toLocaleString("en-IN") %>
      </p>

      <!-- Location -->
      <p class="card-text text-muted mb-1"><%= list.location %></p>
      <p class="card-text text-muted"><%= list.country %></p>

      <!-- Action Buttons -->
      <% if(currUser && list.owner._id.equals(currUser._id)) { %>
        <div class="mt-4">
          <a href="/listings/<%= list._id %>/edit" class="btn btn-danger me-2">Edit</a>
          <form action="/listings/<%= list._id %>?_method=DELETE" method="POST" class="d-inline">
            <button type="submit" class="btn btn-dark">Delete</button>
          </form>
        </div>
      <% } %>

      <% if(currUser) { %>
      <!-- Review Section -->
      <hr class="my-4" />
      <div class="mt-4">
        <form action="/listings/<%= list._id %>/reviews" method="POST" novalidate class="needs-validation">
          
          <!-- Rating -->
          <div class="mb-3">
            <label class="form-label d-block">Rating</label>
            <div class="star-rating mb-1">
              <% for (let i = 5; i >= 1; i--) { %>
                <input type="radio" id="star<%= i %>" name="review[rating]" value="<%= i %>" required>
                <label for="star<%= i %>" title="<%= i %> stars">★</label>
              <% } %>
            </div>
            <div class="invalid-feedback d-block">
              Please select a rating.
            </div>
          </div>

          <!-- Comment -->
          <div class="mb-3">
            <label for="comment" class="form-label">Comment</label>
            <textarea 
              name="review[comment]" 
              id="comment" 
              class="form-control" 
              cols="30" 
              rows="5" 
              placeholder="Write your thoughts here..."
              required
            ></textarea>
            <div class="invalid-feedback">
              Please write a comment before submitting.
            </div>
          </div>

          <!-- Submit Button -->
          <button type="submit" class="btn btn-outline-dark">Submit Review</button>
        </form>
      </div>
      <% } %>

      <!-- Show Comments -->
      <h4 class="mt-4">All Reviews</h4>
      <div class="row">
        <% for (let i = 0; i < list.review.length; i++) { 
              const review = list.review[i];
              const reviewer = review.author?.username || "Anonymous";
        %>
          <div class="col-md-6 mb-4">
            <div class="border rounded p-3 shadow-sm h-100">
            
              <!-- Username -->
              <h6 class="fw-bold mb-1">@<%= reviewer %></h6>
            
              <!-- Rating Stars -->
              <div class="mb-2 text-warning" style="font-size: 1.2rem;">
                <% for (let j = 0; j < review.rating; j++) { %>★ <% } %>
                <% for (let j = review.rating; j < 5; j++) { %>☆ <% } %>
              </div>
            
              <!-- Comment Snippet -->
              <p class="mb-0">
                <%= review.comment.length > 200 
                      ? review.comment.slice(0, 200) + "..." 
                      : review.comment 
                %>
              </p>
            
              <!-- Show More -->
              <% if (review.comment.length > 200) { %>
                <a href="#" class="text-primary text-decoration-underline">Show more</a>
              <% } %>
              
              <% if (currUser && review.author && review.author._id.equals(currUser._id)) { %>
                <form action="/listings/<%= list._id %>/reviews/<%= review._id %>?_method=DELETE"
                      method="POST" class="mt-4">
                  <button type="submit" class="btn btn-outline-danger">Delete Your Review</button>
                </form>
              <% } %>
            
            </div>
          </div>
        <% } %>
      </div>

    </div>
  </div>
</div>

<br><br>

<!-- Styles for Star Rating -->
<style>
  .star-rating {
    direction: rtl;
    display: inline-flex;
    font-size: 2rem;
    user-select: none;
  }

  .star-rating input[type="radio"] {
    display: none;
  }

  .star-rating label {
    color: #ccc;
    cursor: pointer;
    transition: color 0.2s;
  }

  .star-rating input[type="radio"]:checked ~ label,
  .star-rating label:hover,
  .star-rating label:hover ~ label {
    color: #ffc107;
  }

  .was-validated .star-rating input[type="radio"]:invalid ~ label {
    color: #dc3545;
  }
</style>

<!-- Bootstrap Validation Script -->
<script>
  (() => {
    'use strict';
    const forms = document.querySelectorAll('.needs-validation');
    Array.from(forms).forEach(form => {
      form.addEventListener('submit', event => {
        if (!form.checkValidity()) {
          event.preventDefault();
          event.stopPropagation();
        }
        form.classList.add('was-validated');
      }, false);
    });
  })();
</script>
