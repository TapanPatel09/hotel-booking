<% layout("/layouts/boylerplate.ejs") %>
<body>
    <h1>listing details:</h1>
    <ul>
        <li><%=list.title %></li>
        <li><%=list.description %></li>      
        <li>&#8377;<%= list.price.toLocaleString("en-IN") %></li>
        
        <li><%=list.location %></li>
        <li><%=list.country %></li>
    </ul>
    <img src="<%= list.image %>" alt="Listing Image" style="width: 300px; height: auto;" />
    <br>
    <a href="/listings/<%=list._id %>/edit">edit it</a>
    <br><br>
    <form action="/listings/<%=list._id %>?_method=delete" method="post">
        <button>delete</button>
    </form>

</body>
