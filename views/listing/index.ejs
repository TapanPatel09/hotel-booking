<% layout("/layouts/boylerplate.ejs") %>

<!-- ========================= FONTS & ICONS ========================= -->
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<!-- ========================= STYLES ========================= -->
<style>
  body {
    font-family: 'Poppins', sans-serif;
    background-color: #f9f9f9;
  }

  .category-scroll-container {
    position: relative;
    margin-top: 2rem;
  }

  .category-scroll {
    display: flex;
    overflow-x: auto;
    gap: 1rem;
    padding-bottom: 0.5rem;
    scroll-behavior: smooth;
    scrollbar-width: none;
  }

  .category-scroll::-webkit-scrollbar {
    display: none;
  }

  .category-pill {
    flex-shrink: 0;
    border: 1px solid #ccc;
    border-radius: 50px;
    padding: 10px 20px;
    background-color: #fff;
    color: #555;
    transition: all 0.3s ease;
    text-decoration: none;
  }

  .category-pill:hover,
  .category-active {
    background: linear-gradient(to right, #0d6efd, #5a8dee);
    color: #fff !important;
    border-color: #0d6efd;
  }

  .scroll-btn {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background: #ffffff;
    border: 1px solid #ddd;
    border-radius: 50%;
    width: 35px;
    height: 35px;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 10;
    cursor: pointer;
  }

  .scroll-left {
    left: -15px;
  }

  .scroll-right {
    right: -15px;
  }

  .scroll-btn:hover {
    background: #f0f0f0;
  }

  .gst-toggle {
    position: absolute;
    right: 20px;
    top: 20px;
    z-index: 2;
  }

  .switch {
    position: relative;
    display: inline-block;
    width: 50px;
    height: 26px;
  }

  .switch input {
    opacity: 0;
    width: 0;
    height: 0;
  }

  .slider {
    position: absolute;
    cursor: pointer;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: #ccc;
    border-radius: 34px;
    transition: 0.4s;
  }

  .slider:before {
    position: absolute;
    content: "";
    height: 20px;
    width: 20px;
    left: 3px;
    bottom: 3px;
    background-color: white;
    border-radius: 50%;
    transition: 0.4s;
  }

  input:checked + .slider {
    background-color: #0d6efd;
  }

  input:checked + .slider:before {
    transform: translateX(24px);
  }

  .toast {
    position: fixed;
    bottom: 30px;
    right: 30px;
    background-color: #0d6efd;
    color: white;
    padding: 10px 20px;
    border-radius: 10px;
    opacity: 0;
    pointer-events: none;
    transition: all 0.5s ease-in-out;
    z-index: 9999;
  }

  .toast.show {
    opacity: 1;
    pointer-events: auto;
  }

  .listing-card {
    border-radius: 16px;
    overflow: hidden;
    transition: 0.3s ease;
    background: #fff;
    border: none;
    box-shadow: 0 0 8px rgba(0, 0, 0, 0.1);
  }

  .listing-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 6px 24px rgba(0, 0, 0, 0.15);
  }

  .card-img-top {
    height: 220px;
    object-fit: cover;
  }

  .card-title {
    font-weight: 600;
    font-size: 1.2rem;
  }

  .price {
    font-weight: 600;
    color: #0d6efd;
  }

  .btn-view-details {
    margin-top: 10px;
    background-color: #0d6efd;
    color: white;
    border-radius: 25px;
    padding: 8px 16px;
    text-decoration: none;
    display: inline-block;
  }

  .btn-view-details:hover {
    background-color: #084ccf;
    color: #fff;
  }
</style>

<% const activeCategory = typeof categoryName !== 'undefined' ? categoryName : null; %>
<% const categories = [
  { name: "Trending", icon: "fa-fire" },
  { name: "Room", icon: "fa-bed" },
  { name: "Iconic cities", icon: "fa-city" },
  { name: "Castles", icon: "fa-chess-rook" },
  { name: "Swimming Pools", icon: "fa-swimmer" },
  { name: "Camping", icon: "fa-campground" },
  { name: "Farms", icon: "fa-tractor" },
  { name: "Arctic", icon: "fa-snowflake" },
  { name: "Domes", icon: "fa-igloo" },
  { name: "Boats", icon: "fa-sailboat" }
]; %>

<div class="container py-4 position-relative">
  <!-- GST Toggle -->
  <div class="gst-toggle d-flex align-items-center gap-2">
    <label>GST</label>
    <label class="switch">
      <input type="checkbox" id="gstToggle">
      <span class="slider"></span>
    </label>
  </div>

  <!-- CATEGORY FILTER SCROLL -->
  <div class="category-scroll-container">
    <div class="scroll-btn scroll-left" onclick="scrollCategory('left')"><i class="fas fa-chevron-left"></i></div>
    <div class="scroll-btn scroll-right" onclick="scrollCategory('right')"><i class="fas fa-chevron-right"></i></div>

    <div class="category-scroll" id="categoryScroll">
      <% categories.forEach(cat => {
        const isActive = activeCategory === cat.name;
      %>
        <a href="/listings/category/<%= cat.name %>" class="category-pill <% if (isActive) { %> category-active <% } %>">
          <i class="fa <%= cat.icon %> me-2"></i> <%= cat.name %>
        </a>
      <% }) %>
    </div>
  </div>

  <!-- PAGE TITLE -->
  <div class="mt-4 mb-3">
    <% if (typeof categoryName !== 'undefined') { %>
      <h3>Explore <%= categoryName %> Hotels</h3>
    <% } else { %>
      <h3>All Hotel Listings</h3>
    <% } %>
  </div>

  <!-- LISTINGS -->
  <div class="row">
    <% if (alllisting.length === 0) { %>
      <div class="col-12">
        <p class="text-muted">No listings found in this category.</p>
      </div>
    <% } %>

    <% alllisting.forEach(listing => { %>
      <div class="col-md-4 mb-4">
        <a href="/listings/<%= listing._id %>" class="text-decoration-none text-dark">
          <div class="card listing-card">
            <img src="<%= listing.image.url %>" class="card-img-top" alt="<%= listing.title %>">
            <div class="card-body">
              <h5 class="card-title"><%= listing.title %></h5>
              <p class="card-text"><%= listing.description.length > 80 ? listing.description.substring(0, 80) + '...' : listing.description %></p>
              <p><strong>Location:</strong> <%= listing.location %>, <%= listing.country %></p>
              <p><strong>Price:</strong> â‚¹<span class="price"><%= listing.price %></span></p>
              <a class="btn-view-details" href="/listings/<%= listing._id %>">View Details</a>
            </div>
          </div>
        </a>
      </div>
    <% }) %>
  </div>
</div>

<!-- Toast -->
<div id="gstToast" class="toast">GST Enabled</div>

<!-- ========================= SCRIPT ========================= -->
<script>
  const gstToggle = document.getElementById("gstToggle");
  const priceElements = document.querySelectorAll(".price");
  const toast = document.getElementById("gstToast");

  gstToggle.addEventListener("change", () => {
    const isChecked = gstToggle.checked;

    priceElements.forEach(el => {
      const originalPrice = parseFloat(el.getAttribute('data-base') || el.innerText);
      if (isChecked) {
        const gstPrice = (originalPrice * 1.18).toFixed(2);
        el.innerText = gstPrice;
      } else {
        el.innerText = originalPrice.toFixed(2);
      }
    });

    showToast(isChecked ? "GST Enabled (+18%)" : "GST Removed");
  });

  // Save original price
  priceElements.forEach(el => {
    el.setAttribute('data-base', el.innerText);
  });

  function showToast(message) {
    toast.innerText = message;
    toast.classList.add("show");
    setTimeout(() => {
      toast.classList.remove("show");
    }, 2000);
  }

  // Category slider scroll
  const scrollContainer = document.getElementById('categoryScroll');

  function scrollCategory(direction) {
    const scrollAmount = 150;
    if (direction === 'left') {
      scrollContainer.scrollBy({ left: -scrollAmount, behavior: 'smooth' });
    } else {
      scrollContainer.scrollBy({ left: scrollAmount, behavior: 'smooth' });
    }
  }
</script>
