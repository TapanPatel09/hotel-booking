
<% layout("/layouts/boylerplate.ejs") %>

<section class="py-5 text-center bg-light">
  <div class="container">
    <h1 class="display-4 fw-bold">Welcome to Wonderlust Hostels</h1>
    <p class="lead">Discover and list the best hostels around your campus or city. Affordable stays, verified listings, and a community you can trust.</p>
    <a href="/listings" class="btn btn-primary btn-lg mt-3">Explore Hostels</a>
    <% if (!currUser) { %>
      <a href="/signup" class="btn btn-outline-secondary btn-lg mt-3 ms-3">Join Now</a>
    <% } %>
  </div>
</section>

<section class="py-5">
  <div class="container">
    <h2 class="mb-4 text-center">Why Choose Wonderlust?</h2>
    <div class="row text-center">
      <div class="col-md-4">
        <i class="fa-solid fa-bed fa-3x text-primary mb-3"></i>
        <h4>Verified Listings</h4>
        <p>Only trusted and verified hostel listings with reviews and photos.</p>
      </div>
      <div class="col-md-4">
        <i class="fa-solid fa-wallet fa-3x text-success mb-3"></i>
        <h4>Budget Friendly</h4>
        <p>Find accommodations that suit your pocket â€” from shared rooms to private stays.</p>
      </div>
      <div class="col-md-4">
        <i class="fa-solid fa-users fa-3x text-warning mb-3"></i>
        <h4>Community Driven</h4>
        <p>Help others by leaving reviews and tips about local hostels and areas.</p>
      </div>
    </div>
  </div>
</section>

<section class="bg-light py-5">
  <div class="container">
    <h2 class="mb-4 text-center">Top Rated Hostels</h2>
    <div class="row">
      <% topHostels.forEach(hostel => { %>
        <div class="col-md-4 mb-4">
          <div class="card shadow-sm h-100">
            <% if (hostel.image && hostel.image.url) { %>
              <img src="<%= hostel.image.url %>" class="card-img-top hostel-img" alt="<%= hostel.name %>">
            <% } else { %>
              <div class="card-img-top bg-secondary text-white d-flex align-items-center justify-content-center hostel-img" style="height: 200px;">
                <span>No Image</span>
              </div>
            <% } %>
            <div class="card-body">
              <h5 class="card-title"><%= hostel.title %></h5>
              <p class="card-text text-muted"><%= hostel.location || 'No location' %></p>
              <p>
                <i class="fa-solid fa-star text-warning"></i>
                <% if (hostel.review.length > 0) { %>
                  <%= hostel.review[0].rating %>/5
                <% } else { %>
                  No rating
                <% } %>
              </p>

              <a href="/listings/<%= hostel._id %>" class="btn btn-outline-primary btn-sm">View Details</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</section>
